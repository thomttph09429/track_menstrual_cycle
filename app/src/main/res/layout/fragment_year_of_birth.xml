<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_200sdp"
    android:gravity="center"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/text"
        android:textSize="@dimen/_18sdp"
        android:fontFamily="@font/futuramedium"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your birh of year"
        />

    <NumberPicker

        android:layout_below="@+id/text"
        android:id="@+id/picker_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:outlineSpotShadowColor="@color/pink_3"
        android:layout_marginTop="@dimen/_50sdp" />

    <Button
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Choose"
        android:textAllCaps="false"
        android:background="@drawable/btn_gradient_style"
        android:layout_below="@+id/picker_year"
        android:id="@+id/btn_choose"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_58sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        />



</RelativeLayout>